<div style="display: flex; padding: 0 10%;">
  <div style="width: 30%">
    <h2>User Info</h2>
    <%= image_tag 'no_image.jpg' %>
    <br>
    <hr>
    nameã€€<%= @user.name %>
    <hr>
    introduction  <%= @user.introduction %>
    <br>
    <br>
    <%= link_to edit_user_path(@user.id), class: 'btn btn-default btn-block' do %>
      <span class="glyphicon glyphicon-wrench" aria-hidden="true"></span>
    <% end %>

    <h2>New book</h2>

    <%= form_for @book, url: books_path, method: :post do |form| %>              <!-- (1) -->
      <% if @book.errors.any? %>
        <div id="error_explanation">
          <h2><%= pluralize(@book.errors.count, "error") %> prohibited this user from being saved:</h2>
          <ul>
            <% @book.errors.full_messages.each do |message| %>
              <li><%= message %></li>
            <% end %>
          </ul>
        </div>
      <% end %>

      <div class="field">
        <%= form.label :title %>
        <br>
        <%= form.text_field :title %>
      </div>
      <br>
      <div class="field">
        <%= form.label :body, value: 'Opinion' %>
        <br>
        <%= form.text_field :body %>
        <%= form.hidden_field :user_id, :value => @user.id %>
        <br>
        <div class="actions">
          <br>
          <%= form.submit class: "btn btn-primary" %>
        </div>
      </div>
    <% end %>
    <br>
  </div>

  <div style="width: 70%">
    <h2>Users</h2>
    <div style="display: flex">
      <div style="width: 33%">
        image
      </div>
      <div style="width: 33%; font-weight: 500;">
        name
      </div>
      <div style="width: 33%; font-weight: 500;">
      </div>
    </div>
    <% @users.each do |user| %>
      <hr>
      <div style="display: flex">
        <div style="width: 33%">
          <%= image_tag('no_image.jpg',width: '40') %>
        </div>
        <div style="width: 33%">
          <%= user.name %>
        </div>
        <div style="width: 33%">
          <%= link_to 'Show', user_path(user.id) %>
        </div>
      </div>
    <% end %>
  </div>

</div>